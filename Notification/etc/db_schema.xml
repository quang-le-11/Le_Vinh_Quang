<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="promo_notification" resource="default" engine="innodb" comment="Promo Notification Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="name" nullable="false" comment="Name Promo Notification" length="100"/>
        <column xsi:type="int" name="status" comment="Status"/>
        <column xsi:type="date" name="created_at" nullable="false" comment="Date"/>
        <column xsi:type="text" name="short_description" nullable="false" comment="Attribute Description "/>
        <column xsi:type="text" name="redirect_url" nullable="false" comment="Redirect "/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
